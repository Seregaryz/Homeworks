<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F1FC"
    tools:context=".PlayerActivity">


    <ImageView
        android:id="@+id/img_music"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/kvyat" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/tv_music_title"
        android:textColor="#212121"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_singer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_music" />

    <TextView
        android:id="@+id/tv_singer"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:text="@string/tv_singer"
        android:textColor="#212121"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <TextView
        android:id="@+id/tv_album"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:text="@string/tv_album"
        android:textColor="#757575"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_singer" />

    <ImageButton
        android:id="@+id/im_btn_previous"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_width="72dp"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/im_btn_play"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_album"
        app:srcCompat="@drawable/back" />

    <ImageButton
        android:id="@+id/im_btn_play"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_width="72dp"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/im_btn_next"
        app:layout_constraintStart_toEndOf="@id/im_btn_previous"
        app:layout_constraintTop_toBottomOf="@+id/tv_album"
        app:srcCompat="@drawable/pause" />

    <ImageButton
        android:id="@+id/im_btn_next"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_width="72dp"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/im_btn_play"
        app:layout_constraintTop_toBottomOf="@+id/tv_album"
        app:srcCompat="@drawable/next" />

</androidx.constraintlayout.widget.ConstraintLayout>